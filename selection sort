    #include<iostream>
    using namespace std ; 



    int main() {
        int n, min;   

        cout << "Enter the size of the array:" << endl; 
        cin >> n; 

        int arr[n]; 
        cout << "Enter the elements of the array:" << endl;
        for (int i = 0; i < n; i++) {
            cin >> arr[i]; 
        }

        for (int i = 0; i <= n - 2; i++) {
            min = i; 
            for (int j = i + 1; j <= n - 1; j++) {
                if (arr[j] < arr[min]) {
                    min = j; 
                }
            }
            // Swapping elements
            int temp = arr[min]; 
            arr[min] = arr[i]; 
            arr[i] = temp; 
        }

    cout << "Array in sorted order:" << endl; 
    for (int i = 0; i < n; i++) {
        cout << arr[i] << endl; 
    }

    return 0;
}
